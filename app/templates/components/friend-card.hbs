{{#paper-card as |card|}}
  {{#card.title as |title|}}
    {{#title.text as |text|}}
      {{#text.headline}}{{friend.name}}{{/text.headline}}
      <img style="width: auto; height: 250px; margin: auto;" src={{concat "https://www.emberjs.com/" friend.image}} />
    {{/title.text}}
  {{/card.title}}
  {{#card.actions}}
    {{#paper-button raised=true primary=true onClick=(action 'onClick')}}
      Details
      {{#if isLoading}}
        {{paper-progress-linear}}
      {{/if}}
    {{/paper-button}}
    {{#paper-button raised=true primary=true}}Add to Favourites{{/paper-button}}
  {{/card.actions}}
{{/paper-card}}
